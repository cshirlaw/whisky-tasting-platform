{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "reviewer.schema.json",
  "title": "Reviewer",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "displayName", "sortName", "type", "country", "language"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "displayName": {
      "type": "string",
      "minLength": 1
    },
    "sortName": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": ["expert", "consumer", "private-contributor"]
    },
    "country": {
      "type": "string",
      "pattern": "^[A-Z]{2}$"
    },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}$"
    },
    "bio": {
      "type": "string"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["label", "url"],
        "properties": {
          "label": { "type": "string", "minLength": 1 },
          "url": { "type": "string" }
        }
      }
    }
  }
}
